                    }
                  },
                  {
                    "name": "AllowBastionCommunicationsOutbound",
                    "properties": {
                      "protocol": "*",
                      "sourcePortRange": "*",
                      "sourceAddressPrefix": "VirtualNetwork",
                      "destinationAddressPrefix": "VirtualNetwork",
                      "access": "Allow",
                      "priority": 120,
                      "direction": "Outbound",
                      "sourcePortRanges": [],
                      "destinationPortRanges": [
                        "8080",
